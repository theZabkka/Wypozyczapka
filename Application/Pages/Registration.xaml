<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Application.Views.Registration"
             BackgroundColor="#F8F8FF"
             Shell.TabBarIsVisible="False"
             Shell.NavBarIsVisible="False"
             Title="Rejestracja">

    <ScrollView>
        <VerticalStackLayout Spacing="0">

            <!-- Górny baner -->
            <Grid BackgroundColor="#F8F8FF" HeightRequest="300">
                <!-- Twoja grafika będzie tłem – dodasz przez Image lub jako Background -->
                <BoxView BackgroundColor="Black" Opacity="0.1" />

                <Grid Padding="20" ColumnDefinitions="*,Auto" VerticalOptions="Center">
                    <Label Text="WypożyczApka"
                           FontSize="32"
                           FontAttributes="Bold"
                           TextColor="Black"
                           FontFamily="cursive" />
                    <!-- Możesz dodać własną czcionkę -->
                    <Image Source="logo_placeholder.png"
                           HeightRequest="60"
                           WidthRequest="60"
                           Margin="0,0,10,0"
                           VerticalOptions="Center"
                           Grid.Column="1"/>
                </Grid>
            </Grid>

            <!-- Zaokrąglona sekcja rejestracji -->
            <Frame BackgroundColor="White"
                   CornerRadius="30"
                   HasShadow="False"
                   Padding="30"
                   HeightRequest="1000"
                   Margin="0,-30,0,0">

                <VerticalStackLayout Spacing="25" WidthRequest="450">

                    <Label Text="Rejestracja"
                           FontSize="28"
                           FontAttributes="Bold"
                           HorizontalOptions="Center" />

                    <!-- Imię i nazwisko -->
                    <HorizontalStackLayout Spacing="10" WidthRequest="450">
                        <Image Source="user_icon.png" HeightRequest="20" WidthRequest="20"/>
                        <Entry Placeholder="Imię i nazwisko"
                               WidthRequest="380"/>
                    </HorizontalStackLayout>

                    <!-- Email -->
                    <HorizontalStackLayout Spacing="10" WidthRequest="450">
                        <Image Source="email_icon.png" HeightRequest="20" WidthRequest="20"/>
                        <Entry Placeholder="Email" Keyboard="Email" WidthRequest="380" />
                    </HorizontalStackLayout>

                    <!-- Hasło -->
                    <HorizontalStackLayout Spacing="10" WidthRequest="450" >
                        <Image Source="lock_icon.png" HeightRequest="20" WidthRequest="20"/>
                        <Entry Placeholder="Hasło" IsPassword="True" WidthRequest="380" />
                    </HorizontalStackLayout>

                    <!-- Powtórz hasło -->
                    <HorizontalStackLayout Spacing="10" WidthRequest="450">
                        <Image Source="lock_icon.png" HeightRequest="20" WidthRequest="20"/>
                        <Entry Placeholder="Powtórz hasło" IsPassword="True" WidthRequest="380" />
                    </HorizontalStackLayout>

                    <!-- Przycisk rejestracji -->
                    <Button Text="Zarejestruj się"
                            BackgroundColor="#EDE6D6"
                            TextColor="Black"
                            CornerRadius="10"
                            WidthRequest="300"
                            FontSize="Medium"
                            HeightRequest="45"
                            FontAttributes="Bold" />

                    <!-- Link do logowania -->
                    <Label HorizontalOptions="Center">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Masz już konto? " />
                                <Span Text="Zaloguj się"
                                      TextColor="Black"
                                      FontAttributes="Bold"
                                      TextDecorations="Underline"/>
                                     <!-- GestureRecognizers="{StaticResource LoginTapGesture}" --> 
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>

                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
